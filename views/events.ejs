<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    <title>Events</title>
</head>
<body>
    <h1>Events</h1>
    <form class="form" action="/events" method="post">
        <h2>Register</h2>
        <div>
            <input placeholder="Name" id="name" name="name" type="text"><br>
            <input placeholder="email@gmail.com" name="email" id="email" type="email"><br>
            <input placeholder="Event Selected" id="event" name="event" type="text"><br>
            <button type="submit">Submit</button>
        </div>
    </form>

    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <div class="task">
                    <div class="task-details">
                        <h3 class="task-name"><%= task.name %></h3>
                        <h5><%= task.date %></h5>
                        <p class="task-desc"><%= task.description %></p>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>